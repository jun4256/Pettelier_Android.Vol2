<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE9E9"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="작성자" />

        <TextView
            android:id="@+id/c_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="16dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="제목" />

        <TextView
            android:id="@+id/c_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="16dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="조회수" />

        <TextView
            android:id="@+id/c_viewcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="내용" />

    <TextView
        android:id="@+id/c_board_content"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="1"
        android:background="#DED6D6"
        android:padding="16dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="댓글" />

        <ListView
            android:id="@+id/cmt_view"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_weight="1"

            android:padding="16dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_cmt"
            android:layout_width="346dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:background="#DED6D6"
            android:padding="16dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_cmt"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F6907B"
            android:text="댓글 입력"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</LinearLayout>