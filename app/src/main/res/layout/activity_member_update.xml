<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_update"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/purple_700"
        app:srcCompat="@drawable/petlogo3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="  " />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/update_id"
            android:layout_width="303dp"
            android:layout_height="48dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="USER ID 님의 정보"
            android:textSize="34sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/update_pw"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="영문+숫자 6자리이상"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="닉네임" />

    <EditText
        android:id="@+id/update_nick"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="이름" />

    <EditText
        android:id="@+id/update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="연락처" />

    <EditText
        android:id="@+id/update_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="010-0000-0000"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="주소" />

    <EditText
        android:id="@+id/update_adr"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/upadate_adr2"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:background="@drawable/button_radius"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <View
            android:id="@+id/view4"
            android:layout_width="55dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_updateCancel"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="취소"
            android:background="@drawable/button_radius"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

