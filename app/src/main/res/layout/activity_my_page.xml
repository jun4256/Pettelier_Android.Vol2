<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:baselineAligned="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/petlogo3" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFCFC">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="20dp"
                android:text="프로필"
                android:textSize="13dp"
                android:textStyle="bold" />
            <!--프로필 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ClientFragment5_GoogleProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/ClientFragment5_GoogleEmail"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="이메일" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="40dp"
                android:text="등록 정보 변경 및 수정"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ClientFragment5_userInfo"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="내 정보 수정"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />


            <Button
                android:id="@+id/ClientFragment5_petInfo"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="반려동물 정보 수정"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <Button
                android:id="@+id/clientFragment5_petInfo"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="반려동물 정보 추가 등록"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="40dp"
                android:text="고객지원"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_notice"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="공지사항"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"

                    android:enabled="false"
                    android:stateListAnimator="@null"
                    android:text="버전정보"
                    android:textAlignment="textStart"
                    android:textColor="#F3F3F6" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginEnd="0dp"

                    android:enabled="false"
                    android:stateListAnimator="@null"
                    android:text="1.0.0"
                    android:textAlignment="viewEnd"
                    android:textColor="#F3F3F6" />

            </LinearLayout>
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="서비스 이용약관"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <Button
                android:id="@+id/ClientFragment5_personal"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="개인정보 처리방침"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="위치정보 이용약관"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <Button
                android:id="@+id/ClientFragment5_myInfo"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:stateListAnimator="@null"
                android:text="앱 개발자 소개"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="50dp"

                android:stateListAnimator="@null"
                android:text="로그아웃"
                android:textAlignment="textStart"
                android:textColor="#F3F3F6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>