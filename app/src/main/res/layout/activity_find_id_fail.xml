<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_findid1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:srcCompat="@drawable/f_id" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/warning" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_findname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="입력하신 정보와 일치하는 회원정보가 존재하지 않습니다."
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp">

        <Button
            android:id="@+id/btn_f_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="아이디 찾기"
            android:background="@drawable/button_radius"
            android:textColor="#F3F3F6" />

        <View
            android:id="@+id/view"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_f_f_join"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="회원가입하기"
            android:background="@drawable/button_radius"
            android:textColor="#F3F3F6" />
    </LinearLayout>

</LinearLayout>